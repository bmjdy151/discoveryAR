<a-scene>
    <a-assets>
        <img id="texture" src="/images/brick.jpg" />
        <img id="leaf" src="/images/leaf.jpg" />
    </a-assets>>
    <a-box id="box" color="#6d3306" width="2" height="1" depth="1" 
        position="0 4 0" 
        rotation="45 45 45"
        scale="1 2.5 1"
        src="#texture">
        <a-animation attribute="rotation" begin="click" repeat="indefinite" to="0 360 0"></a-animation>    
        {{!-- <a-event name-"mouseenter" scale="4 1 6"></a-event> --}}
    </a-box>
    <a-sphere color="#04933d" 
        position="0 6 -2" 
        src="#leaf">
    </a-sphere>
    <a-camera position="0 7 5">
        <a-cursor color="#FF0000" />
    </a-camera>
    <a-sky src="/images/trees.jpg"></a-sky>
    {{!-- <a-light type="ambient" color="#FF0000" position="-10 0 0" look-at="a-box"></a-light> --}}
    {{!-- <a-light type="point" color="#000000" position="0 0 0" ></a-light> --}}
</a-scene>
